<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlyoutSimple.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlyoutSimple"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Activities" FlyoutIcon="{StaticResource IconBicycle}">
        <ShellContent
            Title="Activities"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="OnePage" />
    </FlyoutItem>
    <FlyoutItem Title="Directions" FlyoutIcon="{StaticResource IconMap}">
        <ShellContent
            Title="Directions"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="TwoPage" />
    </FlyoutItem>
    <FlyoutItem Title="People" FlyoutIcon="{StaticResource IconAddressBook}">
        <ShellContent
            Title="People"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="ThreePage" />
    </FlyoutItem>
    




    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

</Shell>
